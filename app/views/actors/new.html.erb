<%= form_for @actor do |f| -%>
<%=hidden_field_tag :authenticity_token, form_authenticity_token -%>
<% unless @actor.errors[:total].empty?  %>
  <%= @actor.errors[:total].full_message %>
<% end %>
<h4>Name</h4>
<%= f.text_field :name %><br>
<h4>Bio</h4>
<%= f.text_field :bio %><br>
<h4>Birth date</h4>
<%= f.text_field :birth_date %><br>
<h4>Birth place</h4>
<%= f.text_field :birth_place %><br>
<h4>Death date</h4>
<%= f.text_field :death_date %><br>
<h4>Death place</h4>
<%= f.text_field :death_place %><br>
<h4>Image url</h4>
<%= f.text_field :image_url %><br>
<%= f.submit 'submit' %>
<% end %>
